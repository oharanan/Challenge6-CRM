<div class="product">
  <h2>    
      <%= link_to customer.fullName, customer %>    
  </h2>
    
  
  <% if customer.image.present? %>
    <%= image_tag customer.image %>
  <% end %>
  
  <p>
    <strong>Phone:</strong>
    <%= customer.phoneNumber %>
  </p>
  
  <p>
    <strong>Email:</strong>
    <%= customer.emailAddress %>
  </p>
  
  <p>
    <strong>Notes:</strong>
    <%= customer.notes %>
  </p>
  
</div>